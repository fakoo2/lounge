<% layout("/layouts/boilerplate") -%>
<body>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Poppins", sans-serif;
      line-height: 1.6;
      color: #333;
      overflow-x: hidden;
    }

    /* Hero Section */
    .hero {
      height: 100vh;
      background: linear-gradient(
        135deg,
        #05702c 0%,
        #0b8b44 50%,
        #06421a 100%
      );
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      color: white;
      text-align: center;
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.4);
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      max-width: 800px;
      padding: 0 20px;
    }

    .hero-title {
      font-size: 4rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      line-height: 1.2;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      color: #d1b000; /* changed yellow to #D1B000 */
    }

    .hero-subtitle {
      font-size: 1.4rem;
      font-weight: 300;
      margin-bottom: 3rem;
      opacity: 0.95;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .cta-button {
      display: inline-block;
      padding: 18px 40px;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1.2rem;
      transition: all 0.4s ease;
      box-shadow: 0 6px 20px rgba(44, 62, 80, 0.3);
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(44, 62, 80, 0.4);
    }

    /* Featured Hotels Section */
    .featured-hotels {
      padding: 100px 0;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .section-title {
      text-align: center;
      font-size: 3rem;
      font-weight: 600;
      margin-bottom: 3.5rem;
      color: #d1b000; /* changed yellow to #D1B000 */
      position: relative;
    }

    .section-title::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 4px;
      background: linear-gradient(45deg, #d1b000, #b59500);
      border-radius: 2px;
    }

    .hotel-card {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
      cursor: pointer;
      margin-bottom: 2rem;
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .hotel-card:hover {
      transform: translateY(-15px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .hotel-image {
      height: 280px;
      overflow: hidden;
      position: relative;
    }

    .hotel-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .hotel-card:hover .hotel-image img {
      transform: scale(1.1);
    }

    .hotel-info {
      padding: 2rem;
    }

    .hotel-info h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: #d1b000; /* changed yellow to #D1B000 */
    }

    .hotel-info p {
      color: #7f8c8d;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .hotel-rating {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .stars {
      color: #d1b000; /* changed yellow to #D1B000 */
      font-size: 1.2rem;
    }

    .rating-text {
      color: #7f8c8d;
      font-size: 0.9rem;
      font-weight: 500;
    }

    /* Why Choose Us Section */
    .why-choose-us {
      padding: 100px 0;
      background: linear-gradient(
        135deg,
        #2c3e50 0%,
        #34495e 50%,
        #2c3e50 100%
      );
      color: white;
      position: relative;
    }

    .why-choose-us::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><defs><pattern id='grain' width='100' height='100' patternUnits='userSpaceOnUse'><circle cx='20' cy='20' r='1' fill='%23ffffff' opacity='0.05'/><circle cx='80' cy='40' r='1' fill='%23ffffff' opacity='0.05'/><circle cx='40' cy='80' r='1' fill='%23ffffff' opacity='0.05'/></pattern></defs><rect width='100' height='100' fill='url(%23grain)'/></svg>");
      z-index: 1;
    }

    .why-choose-us .container-fluid {
      position: relative;
      z-index: 2;
      padding-left: 0 !important;
      padding-right: 0 !important;
    }

    .why-choose-us .section-title {
      color: white;
    }

    .why-choose-us .section-title::after {
      background: linear-gradient(45deg, #d1b000, #b59500);
    }

    .benefit {
      text-align: center;
      padding: 2.5rem 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      backdrop-filter: blur(10px);
      transition: all 0.4s ease;
      border: 1px solid rgba(255, 255, 255, 0.2);
      margin-bottom: 2rem;
    }

    .benefit:hover {
      transform: translateY(-10px);
      background: rgba(255, 255, 255, 0.15);
    }

    .benefit-icon {
      font-size: 3.5rem;
      margin-bottom: 1.5rem;
      display: block;
    }

    .benefit h3 {
      font-size: 1.4rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .benefit p {
      opacity: 0.9;
      line-height: 1.6;
    }

    /* Final CTA Section */
    .final-cta {
      padding: 100px 0;
      background: linear-gradient(
        135deg,
        #05702c 0%,
        #0b8b44 50%,
        #06421a 100%
      );
      color: white;
      text-align: center;
    }

    .final-cta h2 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #d1b000; /* changed yellow to #D1B000 */
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    .final-cta p {
      font-size: 1.2rem;
      margin-bottom: 3rem;
      opacity: 0.85;
    }

    .final-cta .btn-primary {
      background: #d1b000;
      border: none;
      padding: 16px 45px;
      font-size: 1.3rem;
      font-weight: 600;
      border-radius: 50px;
      color: #1a1a1a;
      transition: all 0.4s ease;
      box-shadow: 0 6px 18px rgba(209, 176, 0, 0.6);
    }

    .final-cta .btn-primary:hover {
      background: #b59500;
      color: white;
      box-shadow: 0 10px 30px rgba(181, 149, 0, 0.8);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.8rem;
      }

      .section-title {
        font-size: 2.5rem;
      }

      .hotel-image {
        height: 220px;
      }
    }

    @media (max-width: 480px) {
      .hero-title {
        font-size: 2.2rem;
      }

      .cta-button {
        padding: 14px 28px;
        font-size: 1rem;
      }

      .section-title {
        font-size: 2rem;
      }

      .hotel-image {
        height: 180px;
      }
    }
  </style>
